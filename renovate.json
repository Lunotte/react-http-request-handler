{
  "extends": [
    "config:base"
  ],
  "schedule": [
    "before 3am on the first day of the month"
  ],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchUpdateTypes": ["patch", "minor", "pin", "digest"],
      "excludePackageNames": ["react-native-reanimated"],
      "automerge": true,
      "groupName": "dependencies (non-major)",
      "groupSlug": "dependencies-non-major"
    },
    {
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchUpdateTypes": ["major"],
      "excludePackageNames": ["gradle", "react-native-reanimated"],
      "groupName": "dependencies (major)",
      "groupSlug": "dependencies-major",
      "labels": ["UPDATE-MAJOR"]
    },
    {
      "excludePackageNames": ["FLIPPER_VERSION"]
    }
  ]
}
